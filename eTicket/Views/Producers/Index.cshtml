@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producer";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ProfilePicture" class="rounded-circle" alt="@item.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
